<style>body{background: #E6F6E7}</style>

<div class="location-form">
  <div class="logo-left-corner">
    <%= image_tag "refood-logo-no-text.png", :size => "100x100" %>
  </div>
  <h2>Choose a location to see what's available</h2>
  <div class="search-form-control">
    <%= form_tag supermarkets_path, method: :get do %>
      <div class="search-form-control form-group">
        <div class="form-control">
          <%= text_field_tag :query, params[:query], placeholder: "Search for a city" %>
            <button name="button" type="submit" class="btn btn-search">Apply</button>
    <% end %>
        </div>
      </div>
  </div>
</div>




