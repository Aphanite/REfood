
  <% if @product.category == "Fruits" %>
    <img class="product-image" src="https://source.unsplash.com/featured/?fruit?orientation=squarish">
  <% else %>
    <img class="product-image" src="https://source.unsplash.com/featured/?vegetable?orientation=squarish">
  <% end %>

<div class="product-content">
  <div class="product-information">
    <h1 class="product-name"><%= @product.name %></h1>
      <div class="d-flex flex-row">
        <div>
          <button class="minus-button" type="button" data-quantity="minus" data-field="quantity">
            <i id="minus-icon" class="fa fa-minus" aria-hidden="true"></i>
          </button>
        </div>
      <input class="input-group-field" type="number" name="quantity" value="1">
        <div>
          <button class ="plus-button" type="button" data-quantity="plus" data-field="quantity">
            <i id="plus-icon" class="fa fa-plus" aria-hidden="true"></i>
          </button>
        </div>
      </div>
     </div>

    <h2 class="product-unit"><%= @product.unit %></h2>

    <div class="product-info pt-2">
      <h2 class="product-text">Description</h2>
        <p class="product-description">
          <%= @product.description %>
        </p>
    </div>
</div>

<div class="bottom-page p-4">
  <div class="prices d-flex">
    <div class="discounted-price"><%= humanized_money_with_symbol(@product.discounted_price) %></div>
    <div class="full-price" style="text-decoration:line-through"><%= humanized_money_with_symbol(@product.full_price) %></div>
  </div>

  <%= form_tag order_path do %>
    <%= hidden_field_tag 'product_id', @product.id %>
    <%= submit_tag 'Add to cart', class: 'product-btn' %>
  <% end %>
  
</div>